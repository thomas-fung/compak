citHeader("To cite compak in publications use:")

citEntry(
  entry    = "Article",
  title    = "Consistent second-order discrete kernel smoothing using dispersed Conway-Maxwell-Poisson kernels",
  author   = personList(as.person("Alan Huang"),
  as.person("Lucas Sippel"),
  as.person("Thomas Fung")),
  journal  = "Computational Statistics",
  year     = "2021",
  note = "Under revision.",
  textVersion = paste("Huang A., Sippel, L. & Fung, T. (2021)",
  "Consistent second-order discrete kernel smoothing using dispersed Conway-Maxwell-Poisson kernels.",
  "Computational Statistics.",
  "Under revision.")
)

citEntry(
  entry    = "Manual",
  title    = "compak: Conway-Maxwell-Poisson Associated Kernel",
  author   = personList(as.person("Alan Huang"),
  as.person("Lucas Sippel"),
  as.person("Thomas Fung")),
  year     = "2021",
  note = "R package version 0.1.0",
  url      = "URL: https://CRAN.R-project.org/package=compak",
  textVersion = paste("Huang, A., Sippel, L. & Fung, T. (2021)",
  "compak: Conway-Maxwell-Poisson Associated Kernel. R package version 0.1.0.",
  "URL https://CRAN.R-project.org/package=compak/.")
)
